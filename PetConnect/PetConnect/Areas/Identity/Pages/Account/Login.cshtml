@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row justify-content-center">
    <div class="col-md-6 m-7 bg-custom-background">
        <section>
            <form id="account" method="post">
                <br />
              
                <h2 class="text-center" style="font-size: 24px; color: #D97706; font-weight: bold; margin-top: 20px; margin-bottom: 20px;">Conecteaza-te la un cont existent</h2>

                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button id="login-submit" type="submit" class="inline-block w-100 px-10 py-3 m-4 text-gray-100 bg-yellow-600 rounded-md shadow hover:bg-yellow-500">Log in</button>
                </div>
                <div>
                    <div class="card-text border p-1 bg-custom-yellow">    
                         <a id="forgot-password" asp-page="./ForgotPassword">Ai uitat parola?</a>
                    </div>
                    <br />
                    <div class="card-text border p-1 bg-custom-yellow">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Inregistreaza-te ca utilizator nou</a>
                    </div>
                    <br />
                    <div class="card-text border p-1 bg-custom-yellow">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Retrimite confirmarea pe mail</a>
                    </div>
                  
                
                    <br />
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .bg-custom-background {
        background-color: #FEF3C7;
    }

    .bg-custom-yellow {
        background-color: #FDE68A;
    }

    .hover\:bg-custom-dark-yellow:hover {
        background-color: #FEF3C7;
    }
</style>