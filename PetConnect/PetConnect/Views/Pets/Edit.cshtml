@model PetConnect.Models.Pet

<h2 class="text-center mt-5">Editare anunt</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm("Edit", "Pets", FormMethod.Post, new { enctype = "multipart/form-data", id = Model.PetId }))

            {
                @Html.HiddenFor(m => m.PetId)

                <div class="form-group">
                    @Html.LabelFor(m => m.Name, "Nume animal")
                    <br />
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                  
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Species, "Specie")
                    <br />
                    @Html.EditorFor(m => m.Species, new { htmlAttributes = new { @class = "form-control" } })
                 
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Breed, "Rasa")
                    <br />
                    @Html.EditorFor(m => m.Breed, new { htmlAttributes = new { @class = "form-control" } })
                 
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Age, "Varsta")
                    <br />
                    @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "form-control" } })
                  
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Size, "Marime")
                    <br />
                    @Html.EditorFor(m => m.Size, new { htmlAttributes = new { @class = "form-control" } })
                 
                </div>

               

                <div class="form-group">
                    @Html.LabelFor(m => m.Sex, "Gen")
                    <br />
                    <label>
                        @Html.RadioButtonFor(m => m.Sex, true, new { @class = "form-check-input" }) Mascul
                    </label>
                    <label>
                        @Html.RadioButtonFor(m => m.Sex, false, new { @class = "form-check-input" }) Femela
                    </label>
               
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Color, "Culoare")
                    <br />
                    @Html.EditorFor(m => m.Color, new { htmlAttributes = new { @class = "form-control" } })
               
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Vaccined, "Vaccinat")
                    <br />
                    <label>
                        @Html.CheckBoxFor(m => m.Vaccined, new { @class = "form-check-input" }) Da
                    </label>
                   
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Sterilized, "Sterilizat")
                    <br />
                    <label>
                        @Html.CheckBoxFor(m => m.Sterilized, new { @class = "form-check-input" }) Da
                    </label>
                  
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Location, "Locatie")
                    <br />
                    @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control" } })
                    
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Description, "Descriere")
                    <br />
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                   
                </div>

                <br />

                <div class="form-group">
                    @Html.Label("Image", "Imagine animal")
                    <br />
                    <input class="form-control" type="file" name="PetImage" />
                   
                </div>

                <div class="form-group">
                    <button class="btn btn-sm btn-success" type="submit">Modifica anunt</button>
                </div>
            }
        </div>
    </div>
</div>
