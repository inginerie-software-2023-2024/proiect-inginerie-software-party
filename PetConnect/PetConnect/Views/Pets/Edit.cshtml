@model PetConnect.Models.Pet

<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3 bg-custom-background">

            @using (Html.BeginForm("Edit", "Pets", FormMethod.Post, new { enctype = "multipart/form-data", id = Model.PetId }))

            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(m => m.PetId)

                <div class="form-group">
                    @Html.LabelFor(m => m.Name, "Nume animal")
                    <br />
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Species, "Specie")
                    <br />
                    @Html.EditorFor(m => m.Species, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Species, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Breed, "Rasa")
                    <br />
                    @Html.EditorFor(m => m.Breed, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Breed, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Age, "Varsta")
                    <br />
                    @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Size, "Marime")
                    <br />
                    @Html.EditorFor(m => m.Size, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Size, "", new { @class = "text-danger" })
                </div>

               

                <div class="form-group">
                    @Html.LabelFor(m => m.Sex, "Gen")
                    <br />
                    <label>
                        @Html.RadioButtonFor(m => m.Sex, true, new { @class = "form-check-input" }) Mascul
                    </label>
                    <label>
                        @Html.RadioButtonFor(m => m.Sex, false, new { @class = "form-check-input" }) Femela
                    </label>
                    @Html.ValidationMessageFor(m => m.Sex, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Color, "Culoare")
                    <br />
                    @Html.EditorFor(m => m.Color, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Color, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Vaccined, "Vaccinat")
                    <br />
                    <label>
                        @Html.CheckBoxFor(m => m.Vaccined, new { @class = "form-check-input" }) Da
                    </label>
                    @Html.ValidationMessageFor(m => m.Vaccined, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Sterilized, "Sterilizat")
                    <br />
                    <label>
                        @Html.CheckBoxFor(m => m.Sterilized, new { @class = "form-check-input" }) Da
                    </label>
                    @Html.ValidationMessageFor(m => m.Sterilized, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Location, "Locatie")
                    <br />
                    @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Description, "Descriere")
                    <br />
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>

                <br />
       
                <div class="form-group">
                    @Html.Label("Image", "Nu uitati sa adaugati o poza cu animalutul!")
                    <br />
                    <input class="form-control" type="file" name="PetImage" />
                   
                </div>

                <div class="form-group">
                    <button class="inline-block px-8 py-3 m-2 text-gray-100 bg-yellow-600 rounded-md shadow hover:bg-yellow-500" type="submit">Modifica anunt</button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .bg-custom-background {
        background-color: #FEF3C7;
    }

    .bg-custom-yellow {
        background-color: #FDE68A;
    }

    .hover\:bg-custom-dark-yellow:hover {
        background-color: #FEF3C7;
    }
</style>