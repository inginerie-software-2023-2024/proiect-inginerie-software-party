@model PetConnect.Models.AdoptionRequest

<h2 class="text-center mt-5">Adaugare anunt</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">


            @using (Html.BeginForm("New", "AdoptionRequests", FormMethod.Post))
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Message, "Mesaj pentru proprietar")
                    <br />
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                </div>

                @Html.HiddenFor(m => m.PetId);

                <div class="form-group">
                    <button class="btn btn-success" type="submit">Trimite cerere</button>
                </div>
            }
        </div>
    </div>
</div>
