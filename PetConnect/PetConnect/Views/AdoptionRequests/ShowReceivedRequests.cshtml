@foreach (var adoptionRequest in ViewBag.AdoptionRequests)
{
    <div class="card">

        <div class="card-body">

            <div class="card-text">@adoptionRequest.Adopter.UserName doreste sa il adopte pe <a href="/Pets/Show/@adoptionRequest.PetId">@adoptionRequest.Pet.Name</a>!</div>
        </div>

        <div class="d-flex justify-content-between flex-row mt-5">

            <a class="btn btn-success" href="/AdoptionRequests/Show/@adoptionRequest.RequestId">Afla mai multe</a>

            <span class="card-text">@adoptionRequest.RequestDate</span>
        </div>

    </div>


    <br />
    <br />
}
