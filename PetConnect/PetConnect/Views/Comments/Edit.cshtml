@model PetConnect.Models.Comment


@{
    ViewBag.Title = "Edit";
}


<br />


<div class="d-flex justify-content-center">
    <div class="col-md-10 bg-custom-background">
        <!-- Increased the width for a larger container -->
        @using (Html.BeginForm(controllerName: "Comments", actionName: "Edit", method: FormMethod.Post, routeValues: new { id = Model.Id }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group text-center">
                <br />
                <br />
                @Html.Label("Content", "Continut comentariu:", new { @class = "custom-label" }) 
                <br />
                <br />
                @Html.Editor("Content", new { @class = "form-control custom-editor" })
                <br />
                @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
                <br />
                <br />
            </div>

            <div class="text-center">
                <button class="inline-block px-11 py-3 m-2 text-gray-100 bg-yellow-600 rounded-md shadow hover:bg-yellow-500" type="submit">Editeaza comentariul</button>
            </div>
            <br />
            <br />
        }
    </div>
</div>

<style>
    .custom-label {
        font-size: 30px;
        font-weight: bold;
        color: #D97706; /* Change to the desired color */
    }

    .custom-editor {
        font-size: 16px;
        height: 150px; /* Set the desired height */
        resize: vertical; /* Allow vertical resizing */
        margin: 10px 0; /* Add some vertical margin */
    }

    .vertical-margin-10 {
        margin: 10px 0;
    }

    .bg-custom-background {
        background-color: #FEF3C7;
    }

    .bg-custom-yellow {
        background-color: #FDE68A;
    }

    .hover\:bg-custom-dark-yellow:hover {
        background-color: #FEF3C7;
    }
</style>
